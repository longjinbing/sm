<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ljb.mapper.TokenDao">

    <resultMap type="com.ljb.entity.Token" id="tokenMap">
        <result property="userId" column="user_id"/>
        <result property="token" column="token"/>
        <result property="expireTime" column="expire_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<sql id="Base_Column_List">
		`user_id`,
		`token`,
		`expire_time`,
		`update_time`	</sql>
	<select id="selectOne" parameterType="com.ljb.query.TokenQuery" resultMap="tokenMap">
    select
    <if test="distinct">
      distinct
    </if>
    <include refid="Base_Column_List" />
    from token
    <if test="_parameter != null">
      <include refid="Query_Where_Clause" />
    </if>
   	limit 0,1
  	</select>
	
	<select id="selectByQuery" parameterType="com.ljb.query.TokenQuery" resultMap="tokenMap">
    select
    <if test="distinct">
      distinct
    </if>
    <include refid="Base_Column_List" />
    from token
    <if test="_parameter != null">
      <include refid="Query_Where_Clause" />
    </if>
    <if test="orderByClause != null">
      order by ${orderByClause}
    </if>
  	</select>
  	
  	<select id="countByQuery" parameterType="com.ljb.query.TokenQuery" resultType="java.lang.Integer">
    select count(*) from sys_region
    <if test="_parameter != null">
      <include refid="Query_Where_Clause" />
    </if>
  	</select>
  	
  	<delete id="deleteByQuery" parameterType="com.ljb.query.TokenQuery">
    delete from token
    <if test="_parameter != null">
      <include refid="Query_Where_Clause" />
    </if>
  	</delete>
		
	<sql id="Query_Where_Clause">
    <where>
      <foreach collection="oredCriteria" item="criteria" separator="or">
        <if test="criteria.valid">
          <trim prefix="(" prefixOverrides="and" suffix=")">
            <foreach collection="criteria.criteria" item="criterion">
              <choose>
                <when test="criterion.noValue">
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue">
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue">
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue">
                  and ${criterion.condition}
                  <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
         </trim>
        </if>
     </foreach>
    </where>
  	</sql>
  		
</mapper>